<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="timeInterval"
            type="String" />
        <variable
            name="mafkirContact"
            type="com.cortado.mafkir.persistence.MafkirContact" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/editCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="@{@string/edit_transition_name(mafkirContact.id)}"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/editContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{mafkirContact.contact}"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="@{timeInterval}"
                    android:hint="@{timeInterval}"
                    android:layout_marginTop="10dp"
                    android:autofillHints="1" />

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:background="#f0f0f0"
                    android:onClick="@{clickListener}"
                    android:text="@string/save" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
